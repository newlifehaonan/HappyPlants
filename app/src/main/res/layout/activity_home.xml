                <!--android:inputType="textMultiLine"-->
                <!--android:text="@string/tip"-->
                <!--android:textAlignment="center"-->
                <!--android:textSize="30sp" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/addnew"
                android:layout_width="225dp"
                android:layout_height="42dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="93dp"
                android:layout_marginStart="93dp"
                android:background="@drawable/option_circle"
                android:gravity="center"
                android:text="Add New Plant"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:contextClickable="true"
                    android:id="@+id/garden"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    app:srcCompat="@drawable/garden"
                    android:tint="@android:color/black"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="@string/garden"
                    android:textAlignment="center"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/discover"
                    android:contextClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    app:srcCompat="@drawable/wishlist"
                    android:tint="@android:color/black"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="@string/wishlist"
                    android:textAlignment="center"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/search_db"
                    android:contextClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    app:srcCompat="@drawable/search"
                    android:tint="@android:color/black"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="@string/discover"
                    android:textAlignment="center"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/story"
                    android:contextClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    app:srcCompat="@drawable/write"
                    android:tint="@android:color/black"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="@string/stories"
                    android:textAlignment="center"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user"
                    android:contextClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    app:srcCompat="@drawable/user"
                    android:tint="@android:color/black"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="@string/profiles"
                    android:textAlignment="center"
                    android:textSize="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>