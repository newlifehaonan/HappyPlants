<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_linear">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <android.support.v7.widget.CardView
            android:id="@+id/userProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="138dp"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/accountinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:drawableLeft="@drawable/personicon"
                    android:drawablePadding="7dp"
                    android:text="@string/username"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/userdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingBottom="30dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="10dp"
                    android:text="@string/userdescription"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/userProfile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/backcard2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/plantcount"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/plantcount"
                    android:drawablePadding="3dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingLeft="45dp"
                    android:text="40"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/favoritecount"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/favecount"
                    android:drawablePadding="4dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="20"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stories"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/storycount"
                    android:drawablePadding="1dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingLeft="0dp"
                    android:text="10"
                    android:textColor="@android:color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userProfile2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:id="@+id/backcard3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">


                <EditText
                    android:id="@+id/emailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/emailicon"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingLeft="20dp"
                    android:text="james@jamesvalles.com"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/mypassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/passwordicon"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="MyPasssword"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_below="@id/userinfo"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:text="Update Profile"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:theme="@style/PrimaryButton" />

        <ImageView
            android:id="@+id/usercompound"
            android:layout_width="186dp"
            android:layout_height="157dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/login_plant"
            android:src="@drawable/jamesprofileholder"
            android:translationZ="100dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>