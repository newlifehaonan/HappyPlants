<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/option_circle_selected" />
    <item android:state_activated="true" android:drawable="@drawable/option_circle_selected" />
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dip" />
            <stroke android:width="1dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:endColor="#69e668" android:startColor="#69e668" android:useLevel="false" />
        </shape>
    </item>

</selector>

