<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/roundedselected" />
    <item android:state_activated="true" android:drawable="@drawable/roundedselected" />

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="28dip" />
            <stroke android:width="0dip" android:color="#686565" />
            <gradient android:angle="-90" android:endColor="#e2f3ea" android:startColor="#FFF8F8F6" android:useLevel="false" />
        </shape>
    </item>
</selector>


